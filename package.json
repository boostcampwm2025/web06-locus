{
  "name": "locus",
  "version": "0.0.0",
  "private": true,
  "description": "공간 기반 기록 서비스",
  "keywords": [
    "location-based",
    "note-taking",
    "spatial-memory",
    "monorepo",
    "turbo"
  ],
  "author": "Team Haping",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "dev:web": "turbo run dev --filter=@locus/web",
    "dev:api": "turbo run dev --filter=@locus/api",
    "build:web": "turbo run build --filter=@locus/web",
    "build:api": "turbo run build --filter=@locus/api",
    "test:web": "turbo run test --filter=@locus/web",
    "test:api": "turbo run test --filter=@locus/api",
    "fmt": "prettier . --write",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "lint-staged": {
    "apps/web/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "apps/api/**/*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md,yaml,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": "22.x",
    "pnpm": "9.x"
  }
}
