{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolvePackageJsonExports": true,
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": "..",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "@features/auth/*": ["./src/features/auth/*"],
      "@features/connection/*": ["./src/features/connection/*"],
      "@features/home/*": ["./src/features/home/*"],
      "@features/onboarding/*": ["./src/features/onboarding/*"],
      "@features/record/*": ["./src/features/record/*"],
      "@features/settings/*": ["./src/features/settings/*"]
    },
    "tsBuildInfoFile": "../../../.cache/tsbuildinfo/tsconfig.storybook.tsbuildinfo"
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
